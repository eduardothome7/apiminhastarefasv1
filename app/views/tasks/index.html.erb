<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Respons√°vel</th>
      <th>Project</th>
      <th>Category</th>
      <th>Status</th>
      <th>Start at</th>
      <th>Estimate at</th>
      <th>Closed at</th>
      <th>Description</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.user_id %></td>
        <td><%= task.project_id %></td>
        <td><%= task.category_id %></td>
        <td><%= task.status_id %></td>
        <td><%= task.start_at %></td>
        <td><%= task.estimate_at %></td>
        <td><%= task.closed_at %></td>
        <td><%= task.description %></td>
        <td><%= task.priority %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

